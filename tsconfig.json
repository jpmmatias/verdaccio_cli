{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "outDir": "bin",
    "declaration": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.js"],
    },
  },
  "extensions": ["ts", "js"],
  "include": ["./src/*"],
  "exclude": ["./__tests__/**/*"],
  "lib": ["es2015"],
}
